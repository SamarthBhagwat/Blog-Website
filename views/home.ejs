
<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">(Read More)</a>
    </p>

    <% }) %>

    <button type="button" class="btn btn-primary btn-lg compose-btn"  name="compose" onclick="location.href='/compose'">
        <span class="glyphicon glyphicon-plus"></span>
        <span> Compose</span>
    </button>


